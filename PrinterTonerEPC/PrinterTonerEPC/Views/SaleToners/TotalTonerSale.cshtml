@model IEnumerable<PrinterToner.Models.TonerTotal>

@{
    ViewBag.Title = "TotalTonerSale";
}

<h2>Ukupan broj prodatih tonera</h2>

@using (Html.BeginForm())
{ <p> Datum od: @Html.TextBox("dateFromString") <input type="submit" value="Search" /></p> }

@using (Html.BeginForm())
{ <p> Datum do: @Html.TextBox("dateToString") <input type="submit" value="Search" /></p> }

<table class="table">
    <tr>
        <th>
            Toner
        </th>
        <th>
            Ukupno
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTonerModel)
            </td>
            <td>
                @item.TonerTotalCount
            </td>
        </tr>
    }

</table>