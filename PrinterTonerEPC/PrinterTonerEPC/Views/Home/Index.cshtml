            <th>
                Spreman
            </th>
            <th class="col1">
                Kreiran
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Nick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsReady)
                </td>
                <td>
                    @Convert.ToString(string.Format("{0:dd/MM/yyyy HH:mm}", item.Created))
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "EditFromHomeView", "ToDoes", new { id = item.ToDoID }, null)
                </td>
            </tr>
        }

    </table>

