@model IEnumerable<PrinterToner.Models.Owner>

@{
    ViewBag.Title = "Index";
}

<h2>Lista svih firmi</h2>

@using (Html.BeginForm())
{ <p> Firma: @Html.TextBox("searchByOwner") <input type="submit" value="Search" /></p> }


<p>
    @Html.ActionLink("Napravi novi", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Vlasnik@*@Html.DisplayNameFor(model => model.OwnerName)*@
        </th>
        <th>
            Telefon@*@Html.DisplayNameFor(model => model.OwnerTelephone)*@
        </th>
        <th>
            Adresa@*@Html.DisplayNameFor(model => model.OwnerAddress)*@
        </th>
        <th>
            Kontakt osoba@*@Html.DisplayNameFor(model => model.OwnerContact)*@
        </th>
        <th>
            Telefon kontakt osobe@*@Html.DisplayNameFor(model => model.OwnerContactTelephone)*@
        </th>
        <th>
            Email@*@Html.DisplayNameFor(model => model.OwnerEmail)*@
        </th>
        <th>
            PIB@*@Html.DisplayNameFor(model => model.OwnerPIB)*@
        </th>
        <th>
            Matični broj@*@Html.DisplayNameFor(model => model.OwnerMatBroj)*@
        </th>
        <th>
            Firma u PDV-u@*@Html.DisplayNameFor(model => model.OwnerIsInPDV)*@
        </th>
        @*<th>
            Kreirano
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Napomena)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerTelephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerContact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerContactTelephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerPIB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerMatBroj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerIsInPDV)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Napomena)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.OwnerID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.OwnerID }) |*@
            @Html.ActionLink("Izbriši", "Delete", new { id=item.OwnerID })
        </td>
    </tr>
}

</table>
